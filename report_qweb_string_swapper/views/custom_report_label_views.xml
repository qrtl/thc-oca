<?xml version="1.0" encoding='UTF-8' ?>
<odoo>
    <record id="view_custom_report_label_tree" model="ir.ui.view">
        <field name="name">custom.report.label.tree</field>
        <field name="model">custom.report.label</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="model_id" />
                <field name="report_id" />
                <field name="existing_label" />
                <field name="custom_label" />
                <field name="active_lang_count" invisible="1" />
                <field
                    name="lang"
                    attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}"
                />
            </tree>
        </field>
    </record>
    <record id="action_custom_report_label" model="ir.actions.act_window">
        <field name="name">Custom Report Labels</field>
        <field name="res_model">custom.report.label</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="menu_custom_report_label"
        name="Custom Report Labels"
        parent="base.menu_administration"
        action="action_custom_report_label"
        sequence="10"
    />
</odoo>
