<?xml version="1.0" encoding='UTF-8' ?>
<odoo>
    <record id="view_custom_qweb_label_tree" model="ir.ui.view">
        <field name="name">custom.qweb.label.tree</field>
        <field name="model">custom.qweb.label</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="template_id" />
                <field name="existing_label" />
                <field name="custom_label" />
                <field name="active_lang_count" invisible="1" />
                <field
                    name="lang"
                    attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}"
                />
            </tree>
        </field>
    </record>
    <record id="action_custom_qweb_label" model="ir.actions.act_window">
        <field name="name">Custom Qweb Labels</field>
        <field name="res_model">custom.qweb.label</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="menu_custom_qweb_label"
        name="Custom Qweb Labels"
        parent="base.menu_administration"
        action="action_custom_qweb_label"
        sequence="10"
    />
</odoo>
